<Window x:Class="Bookstore_WPF_EF_ENG.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_WPF_EF_ENG"
        xmlns:UI="clr-namespace:Bookstore_WPF_EF_ENG.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type= UI:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="450" Width="900">
    
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="RightJusifiedTextCell">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="TextAlignment" Value="Right" />         
        </Style>
    </Window.Resources>
    
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <ComboBox Text="Bookstores"
                      IsEditable="True"
                      IsReadOnly="True"
                      Width="200"
                      Margin="10"
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding Stores }"
                      SelectedItem="{Binding SelectedStore}" />
            <Button Content="Show Quantity" 
                    VerticalAlignment="Center"
                    Command="{Binding ShowBookDetailsCommand}"/>
        </StackPanel>
        <Border Padding="10"
                Margin="10"
                Grid.Row="1">
            <DataGrid 
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="True"
                  CanUserReorderColumns="False"
                  SelectionMode="Single"
                  ItemsSource="{Binding Inventories}"
                  SelectedItem="{Binding SelectedInventory}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN"
                                    Binding="{Binding Isbn13}" 
                                    />
                    <DataGridTemplateColumn Header="Title">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Isbn13Navigation.Title}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.Books, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          SelectedItem="{Binding Isbn13Navigation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="Title"
                                          IsEditable="False"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                <DataGridTextColumn Header="Author last name"
                                    Binding="{Binding Isbn13Navigation.Author.LastName}" />
                <DataGridTextColumn Header="Author first name"
                                    Binding="{Binding Isbn13Navigation.Author.FirstName}" />
                <DataGridTextColumn Header="Publishing date"
                                    Binding="{Binding Isbn13Navigation.PublishingDate}"
                                    ElementStyle="{StaticResource RightJusifiedTextCell}"/>
                <DataGridTextColumn Header="Number of pages"
                                    Binding="{Binding Isbn13Navigation.NumberOfPages}"
                                    ElementStyle="{StaticResource RightJusifiedTextCell}"/>
                <DataGridTextColumn Header="Price"
                                    Binding="{Binding Isbn13Navigation.Price}"
                                    ElementStyle="{StaticResource RightJusifiedTextCell}"/>
                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding Quantity}"
                                    ElementStyle="{StaticResource RightJusifiedTextCell}"/>
      
            </DataGrid.Columns>    
            
        </DataGrid>
        </Border>
    </Grid>
</Window>

    
    
    
    