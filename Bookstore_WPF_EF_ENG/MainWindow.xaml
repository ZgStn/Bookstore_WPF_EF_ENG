<Window x:Class="Bookstore_WPF_EF_ENG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_WPF_EF_ENG"
        xmlns:UI="clr-namespace:Bookstore_WPF_EF_ENG.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type= UI:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="RightJusifiedTextCell">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="TextAlignment" Value="Right" />         
        </Style>
    </Window.Resources>
    
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <ComboBox Width="200"
                      Margin="10"
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding Stores }"
                      SelectedItem="{Binding SelectedStore}" />
            <Button Content="Show Details" 
                    VerticalAlignment="Center"
                    Command="{Binding ShowBookDetailsCommand}"/>
        </StackPanel>
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="False"
                  CanUserReorderColumns="False"
                  
                  ItemsSource="{Binding Inventories}"
                  SelectedItem="{Binding SelectedInventory}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN"
                                    Binding="{Binding Isbn13}" />
                <DataGridTextColumn Header="Title"
                                    Binding="{Binding Isbn13Navigation.Title}" />
                <DataGridTextColumn Header="Quantity" 
                                    Binding="{Binding Quantity}" ElementStyle="{StaticResource RightJusifiedTextCell}"/>
                
            </DataGrid.Columns>    
            
        </DataGrid>
    </Grid>
</Window>

    
    
    
    