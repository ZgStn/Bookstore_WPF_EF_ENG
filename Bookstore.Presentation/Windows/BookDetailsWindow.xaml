<Window x:Class="Bookstore.Presentation.Windows.BookDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore.Presentation.Windows"
        mc:Ignorable="d"
        xmlns:UI="clr-namespace:Bookstore.Presentation.ViewModel"
        d:DataContext="{d:DesignInstance Type= UI:BookDetailsViewModel, IsDesignTimeCreatable=False}"
        Title="Quantity" Height="450" Width="800">
    <Grid>
        <DataGrid 
            
            AutoGenerateColumns="False"
            ItemsSource="{Binding Details}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding Quantity}" />
            </DataGrid.Columns>
        </DataGrid>
        
        
    </Grid>
</Window>
